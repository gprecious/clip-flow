{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Clip-Flow",
	"version": "0.1.9",
	"identifier": "com.flowfinders.clip-flow",
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZCMTE5NjczQjkwQzkzNkEKUldScWt3eTVjNVlSKzVIZjI5MkVWRWZaS2RCdFkzTEkxOThZRmpCTDVKOGN1eWk3YVEybXhmSGIK%",
